-- SCHEMA: Schema1

-- DROP SCHEMA IF EXISTS "Schema1" ;

CREATE SCHEMA IF NOT EXISTS "Schema1"
    AUTHORIZATION postgres;
    
--//--//--

    -- Table: schema1.clientes

-- DROP TABLE IF EXISTS schema1.clientes;

CREATE TABLE IF NOT EXISTS schema1.clientes
(
    "codCliente" integer NOT NULL DEFAULT 1,
    "nomeCliente" text COLLATE pg_catalog."default" NOT NULL DEFAULT 1,
    "idadeCliente" integer NOT NULL DEFAULT 1,
    "emailCliente" text COLLATE pg_catalog."default" DEFAULT 1,
    "senhaCliente" text COLLATE pg_catalog."default" DEFAULT 1,
    CONSTRAINT "Clientes_pkey" PRIMARY KEY ("codCliente")
)

TABLESPACE pg_default;

ALTER TABLE IF EXISTS schema1.clientes
    OWNER to postgres;

--//--//--

-- Table: schema1.jogos

-- DROP TABLE IF EXISTS schema1.jogos;

CREATE TABLE IF NOT EXISTS schema1.jogos
(
    "codJogo" integer NOT NULL DEFAULT 4,
    "precoJogo" numeric NOT NULL DEFAULT 4,
    "generoJogo" text COLLATE pg_catalog."default" NOT NULL DEFAULT 4,
    "plataformJogo" text COLLATE pg_catalog."default" NOT NULL DEFAULT 4,
    "classificacaoJogo" text COLLATE pg_catalog."default" NOT NULL DEFAULT 4,
    "nomeJogo" text COLLATE pg_catalog."default" NOT NULL DEFAULT 4,
    CONSTRAINT "Jogos_NextGen_pkey" PRIMARY KEY ("codJogo", "nomeJogo")
)

TABLESPACE pg_default;

ALTER TABLE IF EXISTS schema1.jogos
    OWNER to postgres;

COMMENT ON TABLE schema1.jogos
    IS 'Todos os jogos do catálogo e seus dados';

--//--//--

-- Table: schema1.funcionarios

-- DROP TABLE IF EXISTS schema1.funcionarios;

CREATE TABLE IF NOT EXISTS schema1.funcionarios
(
    "codMatricFunc" integer NOT NULL DEFAULT 3,
    "dataNascFunc" date NOT NULL,
    "numContatFunc" text COLLATE pg_catalog."default" NOT NULL DEFAULT 3,
    "dataAdmFunc" date NOT NULL,
    "nomeFunc" text COLLATE pg_catalog."default" NOT NULL DEFAULT 3,
    "dataDemisFunc" date NOT NULL,
    CONSTRAINT funcionarios_pkey PRIMARY KEY ("codMatricFunc")
)

TABLESPACE pg_default;

ALTER TABLE IF EXISTS schema1.funcionarios
    OWNER to postgres;

COMMENT ON TABLE schema1.funcionarios
    IS 'tabela de funcionários e seus dados ';